@model IEnumerable<Rocky.Models.Product>

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="UpSert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;
                Create New Product
            </a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th width="40%">Product Name</th>
                <th width="40%">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th>@obj.Name</th>
                    <th>@obj.Price</th>
                    <th>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="UpSert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Products exists.</p>
}